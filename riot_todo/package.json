{
  "name": "riot_todo",
  "version": "1.0.0",
  "description": "todomvc implemented by riotjs",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/txchen/feplay/"
  },
  "keywords": [
    "riotjs",
    "todomvc"
  ],
  "author": "Tianxiang Chen",
  "license": "MIT",
  "devDependencies": {
    "browserify": "^8.1.3",
    "hashmark": "^2.0.1",
    "http-server": "^0.7.4",
    "live-reload": "^0.2.0",
    "minifyify": "^6.1.0",
    "myth": "^1.3.0",
    "nodemon": "^1.3.6",
    "opener": "^1.4.0",
    "parallelshell": "^1.0.4",
    "rimraf": "^2.2.8",
    "riotify": "0.0.7"
  },
  "scripts": {
    "clean": "rimraf dist/*",
    "prebuild": "npm run clean -s",
    "build": "npm run build:scripts -s && npm run build:css -s && npm run build:markup -s",
    "build:scripts": "browserify -t riotify -d src/app.js -p [minifyify --compressPath . --map app.js.map --output dist/app.js.map] -o dist/app.js",
    "build:css": "myth -s -c src/main.css dist/main.css",
    "build:markup": "cp src/index.html index.html",
    "test": "echo test_pass",
    "watch": "parallelshell \"npm run watch:test -s\" \"npm run watch:build -s\"",
    "watch:test": "echo test_pass",
    "watch:build": "nodemon -q -w src/ --ext '.' --exec 'npm run build'",
    "open-dev": "opener http://localhost:9090",
    "serve": "http-server -p 9090 ./",
    "live-reload": "live-reload --port 9091 dist/",
    "dev": "npm run open-dev -s & parallelshell \"npm run live-reload -s\" \"npm run serve -s\" \"npm run watch -s\""
  },
  "dependencies": {
    "riot": "^2.0.7"
  }
}
